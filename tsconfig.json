{
  "compilerOptions": {
    "module": "esNext",
    "target": "esNext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@pwd/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "vitejs-plugin-vue-route-auto-import/type",
      "@vue-macros/reactivity-transform/macros-global",
      "unplugin-vue-macros/macros-global",
      "./src/type/*"
    ],
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": [
    "*.ts",
    "*.vue",
    "*.d.ts",
    "*.tsx",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "components.d.ts",
    "auto-api.ts"
  ]
}
